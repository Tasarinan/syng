{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../app/src",
    "distDir": "../app/src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Syng",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
	"all": true,
	"fs": {
		"scope": ["*"]
	}
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.syng.app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
	"label": "main",
        "fullscreen": false,
        "height": 655,
        "width": 1110,
        "resizable": true,
        "title": "Syng",
	"url": "index.html"
      },
      {
	"label": "characters",
	"fullscreen": false,
	"height": 497,
	"width": 886,
	"resizable": true,
	"title": "Syng | Characters",
	"visible": false,
	"url": "characters.html"
      }
    ]
