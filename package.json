    "electron": "^8.1.0",
    "electron-build-env": "^0.2.0",
    "electron-reload": "^1.5.0",
    "neon-cli": "^0.7.0",
    "rollup": "^2.0.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.19.2",
    "svelte-feather-icons": "^3.2.2",
    "svelte-spa-router": "^2.0.1"
